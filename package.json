{
  "name": "browserify-polymer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "without-babel": "node ./node_modules/.bin/browserify ./index.js -t browserify-shim > bundle-without-babel.js",
    "babel-before": "node ./node_modules/.bin/browserify ./index.js -t [ babelify browserify-shim ]  > bundle-babel-before.js",
    "babel-after": "node ./node_modules/.bin/browserify ./index.js -t  [ browserify-shim babelify ] > bundle-babel-after.js",
    "make-html": "echo '<html><body><script src=\"./bundle-without-babel.js\"></script><script src=\"./bundle-babel-before.js\"></script><script src=\"./bundle-babel-after.js\"></script></body></html>' > index.html",
    "browserify": "npm run without-babel & npm run babel-before && npm run babel-after",
    "deps": "npm install && bower install",
    "assemble": "npm run deps && npm run make-html && npm run browserify && open ./index.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babelify": "^5.0.3",
    "browserify": "^9.0.3",
    "browserify-shim": "^3.8.3"
  },
  "browser": {
    "polymer": "./bower_components/polymer/polymer.js"
  },
  "browserify-shim": {
    "polymer": "Polymer"
  }
}
